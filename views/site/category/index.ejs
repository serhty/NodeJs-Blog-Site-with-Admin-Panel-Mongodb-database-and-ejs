    <!-- News With Sidebar Start -->
    <div class="container-fluid py-3">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row mb-3">
                        <div class="col-12">
                            <div class="d-flex align-items-center justify-content-between bg-light py-2 px-4 mb-3">
                                <h3 class="m-0"><%= category.title %></h3>
                            </div>
                        </div>
                        <% categoryPosts.forEach((categoryPost)=> { %>
                        <div class="col-lg-4">
                            <div class="position-relative mb-3">
                                <img class="img-fluid w-100" src="<%= categoryPost.image %>" style="object-fit: cover; height: 250px;">
                                <div class="overlay position-relative bg-light">
                                    <div class="mb-2" style="font-size: 14px;">
                                        <a href=""><%= category.title %></a>
                                    </div>
                                    <a class="h4" href="<%= settings.link %>/<%= category.link %>/<%= categoryPost.link %>"><%= categoryPost.title %></a>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>